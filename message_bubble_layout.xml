<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id="@+id/message_bubble_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <TextView
        android:id="@+id/message_text"
        android:layout_width="402dp"
        android:layout_height="257dp"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@android:color/white"
        android:background="@drawable/message_bubble_background"
        android:textSize="48sp" />
<View
    android:id="@+id/messgae_bubble_background_tail"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:background ="@drawable/message_bubble_background_tail"/>

    <TextView
        android:id="@+id/Amessage_text"
        android:layout_width="402dp"
        android:layout_height="257dp"
        android:layout_gravity="bottom"
        android:background="@drawable/message_bubble_background2"
        android:gravity="center"
        android:text="Hi"
        android:textColor="@android:color/white"
        android:textSize="48sp" />
</LinearLayout>

